    <script src="~/plugins/google-map/map.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script>

    <script src="~/js/script.js"></script>
    <script src="~/js/contact.js"></script>

