<div class="header">
    <div class="header-left">
        <a href="@Url.Action("Index", "Home")" class="logo">
            <img src="~/images/logo2.webp" width="35" height="35" alt="">
            <span>Helping Hands</span>
        </a>
    </div>
    <a id="toggle_btn" href="javascript:void(0);">
        <i class="fa fa-bars"></i>
    </a>
    <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar">
        <i class="fa fa-bars"></i>
    </a>
    <ul class="nav user-menu float-right">
        <li class="nav-item dropdown has-arrow">
            <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                <span class="user-img">
                    <img class="rounded-circle" src="~/assets/img/user.jpg" width="24" alt="Admin">
                    <span class="status online"></span>
                </span>
                <span>@ViewData["UserName"]</span>
            </a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="@Url.Action("Profile", "Admin")">My Profile</a>
                <a class="dropdown-item" href="@Url.Action("EditProfile", "Admin")">Edit Profile</a>
                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Admin")">Change Password</a>
                <a class="dropdown-item" href="@Url.Action("Index", "Home")">Logout</a>
            </div>
        </li>
    </ul>
</div>

<div class="sidebar" id="sidebar">
    <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
            <ul class="horizontal-menu">
                <li class="menu-title">Nurse Dashboard</li>
                <li><a href="@Url.Action("NurseDashboard", "Nurse")"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>

                <li class='dashboard-nav-dropdown'>
                    <!-- Corrected the placement of this element -->
                    <a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">
                        <i class="bi bi-calendar-heart"></i> Visits
                    </a>
                    <div class='dashboard-nav-dropdown-menu'>
                        <a asp-action="" asp-controller=""
                           class="dashboard-nav-dropdown-item">
                            All
                        </a>
                        <a href="#" class="dashboard-nav-dropdown-item">On-going Visits</a>
                        <a href="#" class="dashboard-nav-dropdown-item">Upcoming Visits</a>
                        <a href="#" class="dashboard-nav-dropdown-item">History Visits</a>
                    </div>
                </li>

                <li><a asp-action="NurseSuburb" asp-controller="Nurse" class="dashboard-nav-item"> <i class="bi bi-geo-fill"></i>My Suburbs </a></li> <!-- Corrected the placement of this element -->
            </ul>
        </div>
    </div>
</div>
