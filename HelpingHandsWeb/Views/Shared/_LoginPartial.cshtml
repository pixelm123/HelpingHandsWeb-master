@{
    var isAuthenticated = Context.Request.HttpContext.Session.GetString("IsAuthenticated") == "true";
}

<ul class="navbar-nav">
    @if (isAuthenticated)
    {
        <!-- Display content for authenticated users -->
        <li class="nav-item">
            <a class="nav-link text-dark" href="#">Hello!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Login" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <!-- Display content for non-authenticated users -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Register" asp-action="Index">Register</a>
        </li>
    }
</ul>
