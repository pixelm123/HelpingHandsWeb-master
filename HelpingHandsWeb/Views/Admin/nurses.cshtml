@model List<NurseViewModel>

@using HelpingHandsWeb.Models.ViewModels.AdminViewModels

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <title>nurses</title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style2.css">
    <!--[if lt IE 9]>
    <script src="assets/js/html5shiv.min.js"></script>
    <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="Index.cshtml" class="logo">
                    <img src="~/images/logo2.webp" width="35" height="35" alt="">
                    <span>Helping Hands</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);">
                <i class="fa fa-bars"></i>
            </a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar">
                <i class="fa fa-bars"></i>
            </a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown d-none d-sm-block">
                    <a href="javascript:void(0);" id="open_msg_box" class="hasnotifications nav-link">
                        <i class="fa fa-comment-o"></i>
                        <span class="badge badge-pill bg-danger float-right">8</span>
                    </a>
                </li>
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/assets/img/user.jpg" width="24" alt="Admin">
                            <span class="status online"></span>
                        </span>
                        <span>Admin</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="profile.cshtml">My Profile</a>
                        <a class="dropdown-item" href="edit-profile.cshtml">Edit Profile</a>
                        <a class="dropdown-item" href="change-password.cshtml">Change Password</a>
                        <a class="dropdown-item" href="login.cshtml">Logout</a>
                    </div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="profile.cshtml">My Profile</a>
                    <a class="dropdown-item" href="edit-profile.cshtml">Edit Profile</a>
                    <a class="dropdown-item" href="change-password.cshtml">Change Password</a>
                    <a class="dropdown-item" href="login.cshtml">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul style="list-style-type:none; padding: 0; display: flex; flex-wrap: wrap;">
                        <li class="menu-title">Main</li>
                        <li><a href="AdminDashboard.cshtml"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>
                        <li><a href="nurses.cshtml"><i class="fa fa-user-md"></i><span>Nurses</span></a></li>
                        <li><a href="patients.cshtml"><i class="fa fa-wheelchair"></i><span>Patients</span></a></li>
                        <li><a href="officemanagers.cshtml"><i class="fa fa-hospital-o"></i><span>Office Managers</span></a></li>
                        <li><a href="conditions.cshtml"><i class="fa fa-hospital-o"></i><span>Chronic Conditions</span></a></li>
                        <li><a href="cities.cshtml"><i class="fa fa-hospital-o"></i><span>Cities</span></a></li>
                        <li><a href="suburbs.cshtml"><i class="fa fa-hospital-o"></i><span>Suburbs</span></a></li>
                        <li class="submenu">
                            <a href="#"><i class="fa fa-flag-o"></i><span> Reports </span><span class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="expense-reports.cshtml"> Expense Report </a></li>
                                <li><a href="invoice-reports.cshtml"> Invoice Report </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Nurses</h4>
            </div>
            <div class="col-sm-8 col-9 text-right m-b-20">
                <a asp-action="AddNurse" class="btn btn-primary btn-rounded float-right">
                    <i class="fa fa-plus"></i> Add Nurse
                </a>
            </div>
        </div>
        <div class="row filter-row">
            <div class="col-sm-6 col-md-3">
                <div class="form-group form-focus">
                    <label class="focus-label">First Name</label>
                    <input type="text" class="form-control floating">
                </div>
            </div>
             <div class="col-sm-6 col-md-3">
                <div class="form-group form-focus">
                    <label class="focus-label">Surname</label>
                    <input type="text" class="form-control floating">
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus select-focus">
                            <label class="focus-label">Gender</label>
                            <select class="select floating">
                                <option>Select Gender</option>
                                <option>Male</option>
                                <option>Female</option>
                                
                            </select>
                        </div>
                    </div>

            <div class="col-sm-6 col-md-3">
                <a asp-action="Nurses" class="btn btn-success btn-block">Search</a>
            </div>
        </div>
        <div class="row doctor-grid">
            @foreach (var nurse in Model)
            {
                <div class="col-md-4 col-sm-4 col-lg-3">
                    <div class="profile-widget">
                        <div class="doctor-img">
                            <a class="avatar" asp-controller="Admin" asp-action="EditNurse" asp-route-id="@nurse.UserID">
                                <img alt="" src="data:image;base64,@Convert.ToBase64String(nurse.ProfilePicture)">
                            </a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-controller="Admin" asp-action="EditNurse" asp-route-id="@nurse.UserID">
                                    <i class="fa fa-pencil m-r-5"></i> Edit
                                </a>
                                <a class="dropdown-item" data-toggle="modal" data-target="#delete_nurse_@nurse.UserID">
                                    <i class="fa fa-trash-o m-r-5"></i> Delete
                                </a>
                            </div>
                        </div>
                        <h4 class="doctor-name text-ellipsis">
                            <a asp-controller="Admin" asp-action="EditNurse" asp-route-id="@nurse.UserID">@nurse.UserName</a>
                        </h4>
                        <div class="doc-prof">@nurse.Status</div>
                        <div class="user-country">
                            <i class="fa fa-map-marker"></i> Location
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="see-all">
                    <a asp-action="Nurses" class="see-all-btn">Load More</a>
                </div>
            </div>
        </div>
    </div>
</div>


@foreach (var nurse in Model)
{
    <div class="modal fade" id="delete_nurse_@nurse.UserID" tabindex="-1" role="dialog" aria-labelledby="delete_nurse_label_@nurse.UserID" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete_nurse_label_@nurse.UserID">Delete Nurse</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this nurse?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a asp-controller="Admin" asp-action="DeleteNurse" asp-route-id="@nurse.UserID" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
}


    </div>
</body>
</html>

