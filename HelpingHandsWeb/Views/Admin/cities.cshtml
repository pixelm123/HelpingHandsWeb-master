@using HelpingHandsWeb.Models.ViewModels.AdminViewModels
@model List<CityViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">
    <title>nurses</title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style2.css">
    <!--[if lt IE 9]>
    <script src="assets/js/html5shiv.min.js"></script>
    <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="Index.cshtml" class="logo">
                    <img src="~/images/logo2.webp" width="35" height="35" alt="">
                    <span>Helping Hands</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);">
                <i class="fa fa-bars"></i>
            </a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar">
                <i class="fa fa-bars"></i>
            </a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown d-none d-sm-block">
                    <a href="javascript:void(0);" id="open_msg_box" class="hasnotifications nav-link">
                        <i class="fa fa-comment-o"></i>
                        <span class="badge badge-pill bg-danger float-right">8</span>
                    </a>
                </li>
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/assets/img/user.jpg" width="24" alt="Admin">
                            <span class="status online"></span>
                        </span>
                        <span>Admin</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="profile.cshtml">My Profile</a>
                        <a class="dropdown-item" href="edit-profile.cshtml">Edit Profile</a>
                        <a class="dropdown-item" href="change-password.cshtml">Change Password</a>
                        <a class="dropdown-item" href="login.cshtml">Logout</a>
                    </div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="profile.cshtml">My Profile</a>
                    <a class="dropdown-item" href="edit-profile.cshtml">Edit Profile</a>
                    <a class="dropdown-item" href="change-password.cshtml">Change Password</a>
                    <a class="dropdown-item" href="login.cshtml">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul class="horizontal-menu">
                        <li class="menu-title">Main</li>
                        <li><a href="AdminDashboard.cshtml"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>
                        <li><a href="nurses.cshtml"><i class="fa fa-user-md"></i><span>Nurses</span></a></li>
                        <li><a href="patients.cshtml"><i class="fa fa-wheelchair"></i><span>Patients</span></a></li>
                        <li><a href="officemanagers.cshtml"><i class="fa fa-hospital-o"></i><span>Office Managers</span></a></li>
                        <li><a href="conditions.cshtml"><i class="fa fa-hospital-o"></i><span>Chronic Conditions</span></a></li>
                        <li><a href="cities.cshtml"><i class="fa fa-hospital-o"></i><span>Cities</span></a></li>
                        <li><a href="suburbs.cshtml"><i class="fa fa-hospital-o"></i><span>Suburbs</span></a></li>
                        <li class="submenu">
                            <a href="#"><i class="fa fa-flag-o"></i><span>Reports</span><span class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="expense-reports.cshtml">Expense Report</a></li>
                                <li><a href="invoice-reports.cshtml">Invoice Report</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-5 col-5">
                        <h4 class="page-title">Cities</h4>
                    </div>
                    <div class="col-sm-7 col-7 text-right m-b-30">
                        <a asp-action="AddCity" class="btn btn-primary btn-rounded">
                            <i class="fa fa-plus"></i> Add City
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>City Name</th>
                                        <th>Abbreviation</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var city in Model)
                                    {
                                        <tr>
                                            <td>@city.CityId</td>
                                            <td>@city.Name</td>
                                            <td>@city.Abbreviation</td>
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a asp-action="EditCity" asp-route-id="@city.CityId" class="dropdown-item">
                                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                                        </a>
                                                        <a asp-action="DeleteCity" asp-route-id="@city.CityId" class="dropdown-item" data-toggle="modal" data-target="#delete_department_@city.CityId">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Modal -->
                                        <div id="delete_department_@city.CityId" class="modal fade delete-modal" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body text-center">
                                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                                        <h3>Are you sure you want to delete this city?</h3>
                                                        <div class="m-t-20">
                                                            <a asp-controller="Admin" asp-action="Cities" class="btn btn-white" data-dismiss="modal">Close</a>
                                                            <form asp-controller="Admin" asp-action="DeleteCity" asp-route-id="@city.CityId" method="post">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/assets/js/app.js"></script>
</body>

</html>
